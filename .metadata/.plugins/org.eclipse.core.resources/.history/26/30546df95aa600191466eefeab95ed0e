<!DOCTYPE html>
<html>
<head>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
	$(document)
			.ready(
					function() {
						var list = new Array();
						var counter = 1;
						$("#txtSearch")
								.keydown(
										function(e) {
											var keyCode = e.keyCode || e.which;

											if (keyCode == 13 || keyCode == 9) {

												let data = $('#txtSearch')
														.val();
												list.push(data);

												var htmlEle = "<li style='text-align: left;'>"
														+ data
														+ "<span id='spn_"
														+ counter
														+ "' onclick='javascript:removeEle(this)' style='cursor:pointer'class='close'>&times;</span></li>";

												$("#listitems").append(htmlEle);
												$("#txtSearch").val('');
												counter++;
											}

										});

					});

	function removeEle(obj) {
		var labelID = $(obj).attr('id');
		$('#' + labelID).parent().remove();
	}
</script>

<style type="text/css">
